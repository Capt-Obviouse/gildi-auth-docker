[mariadb]
# Memory limits (keep MariaDB footprint small for 4GB system)
innodb_buffer_pool_size = 128M
key_buffer_size = 16M
aria_pagecache_buffer_size = 16M

# Reduce per-connection memory usage
sort_buffer_size = 256K
read_buffer_size = 256K
read_rnd_buffer_size = 512K
join_buffer_size = 256K
thread_stack = 192K

# Reduce InnoDB memory overhead
innodb_log_buffer_size = 8M

# Disable performance schema (saves ~400MB)
performance_schema = OFF

# Prevent binary log growth (not needed without replication)
skip-log-bin

# Limit InnoDB file growth
innodb_file_per_table = 1
innodb_autoextend_increment = 8

# Disable general/slow query logs (use only for debugging)
general_log = 0
slow_query_log = 0

# Limit temp table sizes
tmp_table_size = 32M
max_heap_table_size = 32M

# Connection limits
max_connections = 50
